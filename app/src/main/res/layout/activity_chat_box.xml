<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/template"
		tools:context=".ChatBoxActivity" android:layout_gravity="center|center_horizontal|center_vertical"
		app:layout_anchorGravity="center|center_horizontal|center_vertical">
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent" android:gravity="center">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="415dp"
				android:layout_height="453dp" android:gravity="center"
				android:background="#FFFFFF">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Halo, Saya Mr.Sehatin"
					android:ems="10"
					android:id="@+id/editTextText" android:textAlignment="center" android:textStyle="bold"
					android:textSize="20sp"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
			<ImageView
					android:src="@drawable/chatbox"
					android:layout_width="248dp"
					android:layout_height="197dp" android:id="@+id/imageView"
					android:contentDescription="Chatbox Logo"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Ada Yang Bisa Saya Bantu?"
					android:ems="10"
					android:id="@+id/editTextText2" android:textAlignment="center" android:textStyle="bold"
					android:textSize="20sp"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
			<Button
					android:text="Mulai Chat"
					android:layout_width="288dp"
					android:layout_height="wrap_content" android:id="@+id/startChatButton" android:background="#69D1FE"
			/>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>